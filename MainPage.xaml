<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Astley_Aislie_POI_App_Prototype.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="aagrounds.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Grounds of the company" />

            <Label
                Text="Astley Aislie app Prototype"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Help us make the Astley Ainslie an asset for all our community."
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="subheading welcome" />

            <Button
                x:Name="HomePageBtn"
                Text="Start your Journey" 
                SemanticProperties.Hint="leaads user to GPS location inforamtion"
                Clicked="OnStartClicked"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
