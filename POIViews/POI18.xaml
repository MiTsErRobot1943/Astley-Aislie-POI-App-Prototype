<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Astley_Aislie_POI_App_Prototype.POIViews.POI18">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label 
                Text="Doctors Residence or Consultants’ Bungalow"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Image 
                Source="poi18.jpg"
                Aspect="AspectFit"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
            <Label 
                Text="Built in 1932 and formally the Assistant Medical Superintendent’s house."
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Label 
                Text="An orchard still remains behind this building. What fruit trees (in season) can you identify?"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>