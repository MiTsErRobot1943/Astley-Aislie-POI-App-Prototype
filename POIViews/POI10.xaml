<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Astley_Aislie_POI_App_Prototype.POIViews.POI10">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label 
                Text="Pet Cemetery"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Image 
                Source="poi10.jpg"
                Aspect="AspectFit"
                HeightRequest="200"
                WidthRequest="200"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
            <Label 
                Text="In the 1920s and 1930s when St Roque was still a private villa the occupants buried their family pets here in what was at that time their garden. More recently, some other local residents have also buried their family pets here."
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Label 
                Text="How many graves can you find?"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>